{
  "compilerOptions": {
    "target": "ES6",                    
    "module": "ESNext",               
    "strict": true,                     
    "esModuleInterop": true,            
    "jsx": "react",                     
    "outDir": "./dist",                 
    "rootDir": "./src",                 
    "skipLibCheck": true,                
    "resolveJsonModule": true,              
    "moduleResolution": "node",            
    "allowSyntheticDefaultImports": true 
  },
  "include": [
    "src/**/*.ts",                      
    "src/**/*.tsx"                       
  ],
  "exclude": [
    "node_modules"                      
  ]
}
  
