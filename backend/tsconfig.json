{
  "compilerOptions": {
    "target": "ES6",                    // JavaScript-version
    "module": "ESNext",                  // Använd ESNext för att stödja ES-moduler
    "moduleResolution": "Node",          // Hantera modulupplösning som i Node.js
    "strict": true,                      // Aktivera strikt typkontroll
    "esModuleInterop": true,             // Gör att CommonJS-moduler kan importeras korrekt
    "jsx": "react",                      // Om du använder React (både .tsx och .jsx)
    "outDir": "./dist",                  // Var TypeScript-koden ska kompileras till
    "rootDir": "./src",                  // Rotmappen för din kod
    "skipLibCheck": true                 // Undvik att kontrollera bibliotekens typer
  },
  "include": [
    "src/**/*.ts",                       // Inkludera alla TypeScript-filer
    "src/**/*.tsx"                        // Inkludera alla TSX-filer (React-komponenter)
  ],
  "exclude": [
    "node_modules"                       // Uteslut node_modules
  ]
}
